<div class="panel panel-info" style="height: 500px;">
    <div class="panel-heading">
      <span class="panel-title" style="margin-left: 40%;">List Users<span>
    </div>
    <div class="panel-body"  style="height: 85%;
    width: 100%;
    overflow-y:scroll;
    padding-top: 15px;
    padding-left: 15px;
    padding-right: 15px;
    border-bottom: solid 1px rgba(0, 0, 0, 0.18);
    margin-bottom: 10px;
    " >
  {{#each listusers}}
  <div class="list-group-item" style="margin-bottom: 10px; height: 60px; padding: 10px;">
    <table style="width: 100%;">
      <tr>
        <th rowspan="2" class="col-md-1 col-sm-1">  <img src="{{ava}}" width="30" height="30"></th>
        <th  class="col-md-9 col-sm-9">{{username}}</th>
        <th rowspan="2" class="col-md-2 col-sm-2" style="text-align: right;"><button type="button" name="button" class="btn btn-primary" onclick="addfriend('{{username}}')">Add</button></th>
      </tr>
      <tr>
        <th class="col-md-9 col-sm-9">{{username}}</th>
      </tr>
    </table>
  </div>
  {{/each}}
</div>
</div>
<script>
  function addfriend(fr) {
    $(document).ready(function(){
        $.get('/users/addfriend',{friend: fr},function(data){
          console.log(data);
        });
    });
  }

</script>
